<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Event Registration</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <!-- Custom Styles -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --primary-color: #ff4d6d;
            --secondary-color: #5a189a;
            --light-bg: #f8f9fa;
            --dark-bg: #121212;
            --text-light: #333;
            --text-dark: #fff;
        }

        body {
            font-family: 'Poppins', sans-serif;
            transition: background 0.3s, color 0.3s;
        }

        .dark-mode {
            background-color: var(--dark-bg) !important;
            color: var(--text-dark) !important;
        }

            .dark-mode table {
                background-color: #1e1e1e !important;
                border-color: #444 !important;
            }

            .dark-mode th, .dark-mode td {
                background-color: #222 !important;
                color: white !important;
                border-color: #555 !important;
            }

            .dark-mode input, .dark-mode textarea, .dark-mode select {
                background-color: #333 !important;
                color: #ffffff !important;
                border: 1px solid #666 !important;
            }

                .dark-mode input::placeholder, .dark-mode textarea::placeholder {
                    color: #aaa !important;
                }

            .dark-mode .btn {
                border: 1px solid white !important;
            }

            .dark-mode .form-control {
                background-color: #222 !important;
                color: white !important;
                border-color: #444 !important;
            }

        .neomorphism {
            background: linear-gradient(145deg, #ffffff, #e6e6e6);
            box-shadow: 5px 5px 15px #b8b8b8, -5px -5px 15px #ffffff;
            border-radius: 15px;
            padding: 15px;
            transition: all 0.3s ease-in-out;
        }

            .neomorphism:hover {
                box-shadow: inset 5px 5px 15px #b8b8b8, inset -5px -5px 15px #ffffff;
            }

        .glass-effect {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 20px;
        }

        .btn-glass {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-size: 16px;
            color: #fff;
            transition: 0.3s ease-in-out;
        }

            .btn-glass:hover {
                background: rgba(255, 255, 255, 0.4);
            }

        /* Fancy Watermark */
        .watermark {
            position: fixed;
            bottom: 20px;
            right: 20px;
            font-size: 16px;
            font-family: 'Poppins', sans-serif;
            padding: 8px 16px;
            border-radius: 10px;
            backdrop-filter: blur(10px);
            animation: float 3s infinite ease-in-out;
            transition: opacity 0.3s ease-in-out;
        }

        /* Light Mode */
        body:not(.dark-mode) .watermark {
            color: #333;
            background: rgba(255, 255, 255, 0.8);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Dark Mode */
        body.dark-mode .watermark {
            color: #fff;
            background: rgba(0, 0, 0, 0.8);
            box-shadow: 0px 4px 15px rgba(255, 255, 255, 0.1);
        }

        /* Hover Effect */
        .watermark:hover {
            opacity: 1;
        }

        /* Floating Animation */
        @@keyframes float {
            0% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-5px);
            }

            100% {
                transform: translateY(0px);
            }
        }
    </style>
</head>

<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark px-4">
        <a class="navbar-brand text-white" href="/">🎟 Event Registration</a>
        <button id="darkModeToggle" class="btn btn-outline-light">🌙 Toggle Dark Mode</button>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Watermark (Always Visible) -->
    <footer class="watermark">
        <p>👨‍💻 Programmed by <strong>Aryan Rekhi</strong></p>
    </footer>

    <script>
        document.getElementById("darkModeToggle").addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            localStorage.setItem("dark-mode", document.body.classList.contains("dark-mode"));
        });

        if (localStorage.getItem("dark-mode") === "true") {
            document.body.classList.add("dark-mode");
        }
    </script>
</body>
